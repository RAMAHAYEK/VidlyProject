@model VidlyProject.ViewModels.AddEditMovieViewModel
@{
    ViewBag.Title = "AddEditMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Movie.Id == 0)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

<form action="@Url.Action("Save" , "Movies" )" enctype="multipart/form-data" method="post">

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre, new SelectList(Model.genreTypes), "Select genre Type", new { @class = "form-control" })
    </div>


    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Movie Image</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <input type="file" multiple name="picture" accept="image/*">
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
</form>



